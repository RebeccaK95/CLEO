<!DOCTYPE html>
<html>
  <head>
    <title>CLEO</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <header>
    <div class="d-flex navbar">
      <div class="container">
        <div class="mr-auto logo-navbar"> <%= image_tag("Logo_Cleo_navbar.svg") %> </div>
        <div class="px-3 title-navbar"> <%= image_tag("icon_dashboard_active.svg") %> <%= link_to "Dashboard", root_path %> </div>
        <div class="px-3 title-navbar"> <%= image_tag("icon_challenges.svg") %><%= link_to " Challenges", challenges_path %></div>
        <div class="px-3 title-navbar"> <%= image_tag("icon_tips.svg") %><%= link_to " Tips", tips_path(:category_id) %> </div>
        <div class="px-3 avatar"> <%= image_tag("avatar_default.svg") %> </div>
      </div>
    </div>
  </header>

  <body>
    <div class="container container-margin">
      <%= yield %>
      <div class="button">test</div>
    </div>
  </body>
</html>
